<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Links to boostrap CDN and external CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="css/styles.css">
  <title>Bored?</title>
</head>

<body>
  <section class="container bgc-inner">
    <!-- header for page -->
    <div class="row justify-content-center">
      <h1>Bored API</h1>
    </div>
    <!-- container for the input form -->
    <div class="row justify-content-center">
      <div class="container bgc-inner">
        <form action="/" method="post">
          <div class="form-row">
            <div class="container col-lg-4">
              <label for="inputService">Category:</label>
              <select id="inputService" name="categoryName" class="form-control shadow">
                <option selected>Choose...</option>
                <option>busywork</option>
                <option>charity</option>
                <option>cooking</option>
                <option>diy</option>
                <option>education</option>
                <option>music</option>
                <option>social</option>
                <option>recreational</option>
                <option>relaxation</option>
              </select>
            </div>
            <div class="container col-lg-4">
              <label class="inputText" for="participentInput">Number of Participents: </label>
              <input class="form-control form-control-lg shadow" id="participentInput" value="1" type="number" name="participentNumber">
            </div>
          </div>
          <div class="form-row">
            <div class="container col-lg-4">
              <label for="priceRangeMin" class="form-label">Relative Price: Min</label>
              <input class="form-control form-control-lg shadow" value="0" type="text" id="priceRangeMin" name="priceRangeMin" placeholder="0">
            </div>
            <div class="container col-lg-4">
              <label for="priceRangeMax" class="form-label">Max:</label>
              <input class="form-control form-control-lg shadow" value="100" type="text" id="priceRangeMax" name="priceRangeMax" placeholder="100">
            </div>
          </div>

          <div class="form-row">
            <div class="container col-lg-4">
              <label for="accessibilityRange" class="form-label">Difficulty: Min</label>
              <input class="form-control form-control-lg shadow" value="0" type="text" id="accessibilityRangeMin" name="accessibilityRangeMin" placeholder="0">
            </div>
            <div class="container col-lg-4">
              <label for="accessibilityRangeMax" class="form-label">Difficulty: Max</label>
              <input class="form-control form-control-lg shadow" value="100" type="text" id="accessibilityRangeMax" name="accessibilityRangeMax" placeholder="100">
            </div>
          </div>
          <div class="">
            <button class="btn btn-dark shadow" type="submit">Go</button>
            <p class="error"><%=error%></p>
          </div>
        </form>
      </div>
    </div>
    <!-- Container to display returned results -->
    <div class="container justify-content-center bgc-inner">
      <% if (activities.length > 0) {%>
      <div class="row bgc-results radius10top">
        <div class="col">
          <h2 class="results">Description: <%=activities[0].description%></h2>
        </div>
      </div>
      <div class="row bgc-results ">
        <div class="col">
          <p class="results">Type: <%=activities[0].type%></p>
        </div>
        <div class="col bgc-results">
          <p class="results">Number of Participants: <%=activities[0].participants%></p>
        </div>
      </div>
      <div class="row bgc-results">
        <div class="col">
          <p class="results">Relative Price: <%=activities[0].price%></p>
        </div>
        <div class="col bgc-results">
          <p class="results">Accessibility: <%=activities[0].accessibility%></p>
        </div>
      </div>
      <div class="row bgc-results radius10bottom">
        <div class="col">
          <p class="results">URL: <a href="<%=activities[0].link%>"><%=activities[0].link%></a></p>
        </div>
      </div>
      <% }; %>
    </div>
    <!-- Container to display all search results -->
    <div class="row justify-content-center bgc-inner">
      <div class="container">
        <% activities.forEach((activity) => {%>
        <button class="accordion radius10"><%=activity.description%></button>
        <div class="panel radius10">
          <div class="row">
            <div class="col">
              <p>Type: <%=activity.type%></p>
            </div>
            <div class="col">
              <p>Number of Participants: <%=activity.participants%></p>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <p>Relative Price: <%=activity.price%></p>
            </div>
            <div class="col">
              <p>Accessibility: <%=activity.accessibility%></p>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <p>URL: <a href="<%=activity.link%>"><%=activity.link%></a></p>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </section>
  <!-- Script connection to external JS file -->
  <script src="js/index.js"></script>
</body>

</html>
